# üîê API Configuration
# ===================

# Primary AI Provider (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Fallback AI Provider (Optional but recommended)
GROQ_API_KEY=your_groq_api_key_here

# Additional AI Providers (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# üîß Application Configuration
# ============================

# Logging Configuration
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR
STRUCTURED_LOGGING=true             # Enable structured logging
LOG_TO_FILE=true                   # Save logs to file

# Rate Limiting Configuration
MAX_RETRIES=5                       # Maximum retry attempts
BASE_DELAY=2                        # Base delay between retries (seconds)
MAX_DELAY=60                        # Maximum delay between retries
BACKOFF_FACTOR=2                    # Exponential backoff multiplier

# Search Configuration
MAX_SEARCH_RESULTS=10               # Maximum search results per query
SEARCH_TIMEOUT=30                   # Search timeout in seconds
ENABLE_QUERY_OPTIMIZATION=true     # Enable AI-powered query optimization

# Scraping Configuration
SCRAPE_TIMEOUT=30                   # Web scraping timeout
SCRAPE_DELAY=2                      # Delay between scraping requests
MAX_SCRAPE_PAGES=5                  # Maximum pages to scrape per domain

# Report Configuration
PDF_PAGE_SIZE=letter                # letter, a4, legal
PDF_MARGINS=0.75                    # Margins in inches
INCLUDE_CHARTS=true                 # Include charts in reports
INCLUDE_TABLES=true                 # Include tables in reports

# üåç Performance & Resources
# ==========================

# Memory Management
MAX_MEMORY_USAGE=2048              # Maximum memory usage in MB
ENABLE_CACHING=true                # Enable intelligent caching
CACHE_TTL=3600                     # Cache time-to-live in seconds

# Concurrency
MAX_CONCURRENT_REQUESTS=3          # Maximum concurrent API requests
THREAD_POOL_SIZE=4                 # Thread pool size for parallel processing

# üõ°Ô∏è Security & Privacy
# ======================

# Data Privacy
ANONYMIZE_DATA=false               # Anonymize sensitive data
ENCRYPT_CACHE=false                # Encrypt cached data
DATA_RETENTION_DAYS=30             # Data retention period

# Network Security
VERIFY_SSL=true                    # Verify SSL certificates
USE_PROXY=false                    # Use proxy server
PROXY_URL=                         # Proxy URL if USE_PROXY=true

# üß™ Development & Testing
# =========================

# Development Mode
DEBUG_MODE=false                   # Enable debug mode
VERBOSE_OUTPUT=false              # Enable verbose console output
SAVE_RAW_DATA=false               # Save raw API responses for debugging

# Testing Configuration
TEST_MODE=false                    # Enable test mode with mock data
MOCK_API_CALLS=false              # Mock external API calls
TEST_DATA_PATH=tests/data/        # Path to test data files

# üìä Monitoring & Analytics
# ==========================

# Performance Monitoring
ENABLE_METRICS=false              # Enable performance metrics collection
METRICS_ENDPOINT=                 # Metrics collection endpoint
ENABLE_TELEMETRY=false           # Enable telemetry data collection

# Error Tracking
ENABLE_ERROR_TRACKING=false       # Enable error tracking
ERROR_TRACKING_DSN=               # Error tracking service DSN

# üîÑ Advanced Features
# ====================

# AI Enhancement
ENABLE_AUTO_OPTIMIZATION=true     # Auto-optimize queries and analysis
USE_ENSEMBLE_MODELS=false         # Use multiple AI models for better results
ENABLE_FACT_CHECKING=false        # Enable fact-checking of results

# Output Enhancement
AUTO_TRANSLATE=false              # Auto-translate reports to different languages
TARGET_LANGUAGE=en                # Target language for translation
INCLUDE_CITATIONS=true            # Include source citations in reports
WATERMARK_REPORTS=false           # Add watermarks to PDF reports

# Integration Options
WEBHOOK_URL=                      # Webhook for completion notifications
SLACK_WEBHOOK=                    # Slack webhook for notifications
EMAIL_NOTIFICATIONS=false        # Enable email notifications
SMTP_SERVER=                      # SMTP server for email notifications
SMTP_USER=                        # SMTP username
SMTP_PASS=                        # SMTP password

# üéØ Industry-Specific Settings
# ==============================

# Default Industry Focus
DEFAULT_INDUSTRY=technology        # Default industry for analysis
INDUSTRY_SPECIFIC_SOURCES=true    # Use industry-specific data sources
REGULATORY_COMPLIANCE=false       # Enable regulatory compliance checks

# Geographic Focus
DEFAULT_REGION=global             # global, us, eu, asia
INCLUDE_LOCAL_COMPETITORS=true    # Include local/regional competitors
CURRENCY_CONVERSION=false         # Enable currency conversion for pricing

# ‚ö° Performance Optimization
# ===========================

# Caching Strategy
INTELLIGENT_CACHING=true          # Enable intelligent caching
CACHE_COMPRESSION=true            # Compress cached data
DISTRIBUTED_CACHE=false           # Use distributed caching

# Resource Optimization
AUTO_SCALE_RESOURCES=false        # Auto-scale resources based on load
OPTIMIZE_FOR_SPEED=false          # Optimize for speed over accuracy
OPTIMIZE_FOR_ACCURACY=true        # Optimize for accuracy over speed

# üìà Business Intelligence
# =========================

# Advanced Analytics
SENTIMENT_ANALYSIS=false          # Enable sentiment analysis
TREND_ANALYSIS=false              # Enable trend analysis
COMPETITIVE_SCORING=false         # Enable competitive scoring
MARKET_SHARE_ANALYSIS=false       # Enable market share analysis

# Predictive Features
FORECAST_TRENDS=false             # Enable trend forecasting
PREDICT_MARKET_MOVES=false        # Enable market movement predictions
RISK_ASSESSMENT=false             # Enable competitive risk assessment

# üé® UI/UX Configuration
# ======================

# Report Styling
REPORT_THEME=professional         # professional, modern, minimal, corporate
BRAND_COLORS=false                # Use custom brand colors
COMPANY_LOGO=                     # Path to company logo for reports
CUSTOM_FOOTER=                    # Custom footer text for reports

# Output Formats
ENABLE_JSON_OUTPUT=false          # Enable JSON output format
ENABLE_CSV_OUTPUT=false           # Enable CSV output format
ENABLE_MARKDOWN_OUTPUT=false      # Enable Markdown output format
ENABLE_HTML_OUTPUT=false          # Enable HTML output format

# üì± API & Integration
# ====================

# API Configuration
ENABLE_REST_API=false             # Enable REST API server
API_PORT=8000                     # API server port
API_HOST=localhost                # API server host
API_AUTH_REQUIRED=true            # Require authentication for API

# Third-party Integrations
AIRTABLE_API_KEY=                 # Airtable API key for data export
NOTION_API_KEY=                   # Notion API key for data export
SHEETS_API_KEY=                   # Google Sheets API key for data export

# üèóÔ∏è Infrastructure
# ==================

# Deployment Configuration
ENVIRONMENT=development           # development, staging, production
SERVICE_NAME=competitor-research-agent
VERSION=2.0.0

# Health Checks
HEALTH_CHECK_ENDPOINT=/health     # Health check endpoint
READY_CHECK_ENDPOINT=/ready       # Readiness check endpoint
METRICS_ENDPOINT=/metrics         # Metrics endpoint

# Container Configuration (for Docker deployment)
CONTAINER_MEMORY_LIMIT=2g         # Container memory limit
CONTAINER_CPU_LIMIT=1000m         # Container CPU limit
CONTAINER_RESTART_POLICY=always   # Container restart policy
